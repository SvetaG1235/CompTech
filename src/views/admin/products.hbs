{{> admin/header title="Управление товарами"}}

<div class="products-admin">
  <div class="product-form">
    <h3>Добавить товар</h3>
    <form action="/admin/products" method="POST">
      <!-- Поля формы -->
      <button type="submit">Добавить</button>
    </form>
  </div>

  <div class="product-list">
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Название</th>
          <th>Цена</th>
          <th>Действия</th>
        </tr>
      </thead>
      <tbody>
        {{#each products}}
          <tr>
            <td>{{this.id}}</td>
            <td>{{this.name}}</td>
            <td>{{this.price}} ₽</td>
            <td>
              <a href="#" class="edit-btn" data-id="{{this.id}}">Редактировать</a>
              <form action="/admin/products/{{this.id}}/delete" method="POST">
                <button type="submit">Удалить</button>
              </form>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>

{{> admin/footer}}