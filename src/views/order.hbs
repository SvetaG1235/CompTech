<h1>Оформление заказа</h1>

<form class="order-form" method="POST" action="/orders">
    <div class="form-group">
        <label for="name">Ваше имя:</label>
        <input type="text" id="name" name="name" value="{{user.name}}" required>
    </div>
    
    <div class="form-group">
        <label for="phone">Телефон:</label>
        <input type="tel" id="phone" name="phone" value="{{user.phone}}" required>
    </div>
    
    <div class="form-group">
        <label for="address">Адрес доставки:</label>
        <input type="text" id="address" name="address" required>
    </div>
    
    <div class="form-group">
        <label>Товары в заказе:</label>
        <ul class="order-items">
            {{#each cartItems}}
            <li>
                {{this.name}} - {{this.quantity}} × {{this.price}} ₽
                <input type="hidden" name="products[]" value="{{this.id}}">
                <input type="hidden" name="quantities[]" value="{{this.quantity}}">
            </li>
            {{/each}}
        </ul>
        <p class="total">Итого: {{total}} ₽</p>
    </div>
    
    <button type="submit" class="btn btn-submit">Подтвердить заказ</button>
</form>