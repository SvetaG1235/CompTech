<div class="orders-page">
  <h1>История заказов</h1>
  
  {{#if orders.length}}
    <div class="orders-list">
      {{#each orders}}
        <div class="order-card">
          <h3>Заказ #{{this.id}}</h3>
          <p>Дата: {{formatDate this.createdAt}}</p>
          <p>Статус: <span class="status-{{this.status}}">{{this.status}}</span></p>
          <p>Сумма: {{this.total}} ₽</p>
          
          <div class="order-products">
            <h4>Товары:</h4>
            <ul>
              {{#each this.Products}}
                <li>
                  {{this.name}} - {{this.OrderItem.quantity}} × {{this.OrderItem.price}} ₽
                </li>
              {{/each}}
            </ul>
          </div>
        </div>
      {{/each}}
    </div>
  {{else}}
    <p>У вас пока нет заказов</p>
  {{/if}}
</div>