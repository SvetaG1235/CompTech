<h1>Мои заказы</h1>

{{#if orders.length}}
<table class="orders-table">
    <thead>
        <tr>
            <th>№</th>
            <th>Дата</th>
            <th>Сумма</th>
            <th>Статус</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        {{#each orders}}
        <tr>
            <td>{{this.id}}</td>
            <td>{{formatDate this.createdAt}}</td>
            <td>{{this.total}} ₽</td>
            <td>
                <span class="status-{{this.status}}">{{this.status}}</span>
            </td>
            <td>
                <a href="/orders/{{this.id}}" class="btn btn-details">Подробнее</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{else}}
<p class="no-orders">У вас пока нет заказов</p>
{{/if}}