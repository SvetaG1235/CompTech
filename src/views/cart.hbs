<h1>Корзина</h1>

{{#if cartItems.length}}
    <div class="cart-items">
        {{#each cartItems}}
        <div class="cart-item">
            <img src="{{product.imageUrl}}" alt="{{name}}">
            <div class="item-info">
                <h3>{{name}}</h3>
                <p>Цена: {{formatPrice price}} ₽ × {{quantity}} = {{formatPrice (multiply price quantity)}} ₽</p>
            </div>
        </div>
        {{/each}}
    </div>
    
    <div class="cart-total">
        <strong>Итого: {{formatPrice total}} ₽</strong>
    </div>
    
    <a href="/orders/new" class="btn btn-primary">Оформить заказ</a>
{{else}}
    <p>Ваша корзина пуста</p>
    <a href="/products" class="btn btn-primary">К товарам</a>
{{/if}}